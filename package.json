{
  "name": "amp-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "server": "PORT=8080 REACT_APP_DEFAULT_NETWORK_ID=8888 node server.js",
    "build": "react-scripts build",
    "test": "react-app-rewired test --env=jsdom --watch",
    "eject": "react-scripts eject",
    "flow": "flow",
    "flowwatch": "fswatch -o ./ | xargs -n1 -I{} sh -c 'clear; printf \"\\033[3J\" && flow'",
    "sass": "sass src/styles/scss/index.scss:src/styles/css/index.css src/styles/scss/storybook.scss:src/styles/css/storybook.css",
    "sass-watch": "sass --watch src/styles/scss/index.scss:src/styles/css/index.css src/styles/scss/storybook.scss:src/styles/css/storybook.css",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "build-svg": "npx @svgr/cli -d ./node-modules/cryptocurrency-icons/svg/color/ src/components/Common/Icons/"
  },
  "dependencies": {
    "@amcharts/amcharts3-react": "^3.1.0",
    "@axetroy/react-download": "^1.1.1",
    "@blueprintjs/core": "^3.2.0",
    "@blueprintjs/select": "^3.1.0",
    "@blueprintjs/table": "^3.0.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.8",
    "@fortawesome/free-brands-svg-icons": "^5.5.0",
    "@fortawesome/free-regular-svg-icons": "^5.5.0",
    "@fortawesome/free-solid-svg-icons": "^5.5.0",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "@svgr/cli": "^4.0.3",
    "accounting-js": "^1.1.1",
    "amcharts3": "^3.21.13",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "connected-react-router": "^4.4.1",
    "cryptocurrency-icons": "^0.9.0",
    "d3-dsv": "^1.0.8",
    "d3-format": "^1.3.0",
    "d3-shape": "^1.2.0",
    "d3-time-format": "^2.1.1",
    "date-fns": "^1.29.0",
    "ethers": "^4.0.13",
    "express": "^4.16.3",
    "jest-localstorage-mock": "^2.2.0",
    "polished": "^1.9.3",
    "rc-steps": "^3.1.1",
    "react": "^16.4.1",
    "react-app-rewire-hot-loader": "^1.0.2",
    "react-app-rewired": "^1.6.2",
    "react-dom": "^16.4.1",
    "react-dropzone": "^4.2.13",
    "react-hot-loader": "^4.3.11",
    "react-intl": "^2.4.0",
    "react-popper": "^1.0.2",
    "react-redux": "^5.0.7",
    "react-resizable": "^1.7.5",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "react-stockcharts": "^0.7.7",
    "react-transition-group": "^2.4.0",
    "react-virtualized": "^9.20.1",
    "recharts": "^1.3.5",
    "redux": "^4.0.0",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0",
    "sha3": "^1.2.2",
    "sorted-array": "^2.0.2",
    "styled-components": "~3.3.3",
    "styled-css-grid": "^0.11.0",
    "styled-system": "^3.0.2",
    "system-components": "^3.0.1",
    "web3-utils": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.8",
    "@storybook/addon-console": "^1.0.4",
    "@storybook/addon-info": "^3.4.8",
    "@storybook/addon-knobs": "^3.4.8",
    "@storybook/addon-links": "^3.4.8",
    "@storybook/addon-options": "^3.4.8",
    "@storybook/addons": "^3.4.8",
    "@storybook/react": "^3.4.8",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "^0.75.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write --print-width 120 --no-semi --trailing-comma none",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  }
}
